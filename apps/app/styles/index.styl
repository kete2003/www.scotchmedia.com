$bg-color = #eaefde
$nav-bg-color = #eaefde
$nav-bg-color = #18c2e1
$bg-color = #f5f5f5

$accent-color-0 = #ffffff
$accent-color-1 = #ff4081
$accent-color-2 = #ff80ab
$accent-color-3 = #f50057

$primary-color-0 = #ffffff
$primary-color-1 = #3f51b5
$primary-color-2 = #c5cae9
$primary-color-3 = #1a237e

$gray-lighter = lighten(#282a2b, 70%)
$white-dark = lighten(#282a2b, 50%)
$gray-light = lighten(#282a2b, 40%)
$white-darker = lighten(#282a2b, 20%)
$white-darkest = lighten(#282a2b, 10%)

$glt-70 = lighten(#282a2b, 70%)
$glt-50 = lighten(#282a2b, 50%)
$glt-40 = lighten(#282a2b, 40%)
$glt-20 = lighten(#282a2b, 20%)
$glt-10 = lighten(#282a2b, 10%)

$gray = #282a2b

$gdk-40 = darken(#282a2b, 40%)

@import 'code'
@import 'lib/github.min.css'
@import 'lib/atelier-dune.light.css'

a
  color: $primary-color-1
  text-decoration: none

ol, li
  font-weight: 400
  font-size: 16px
  line-height: 1.4

p
  font-weight: 400
  line-height: 1.5

h1, h2, h3, h4, h5
  font-weight: 400

h4
  font-size: 18px

h5
  font-size: 16px

body
  margin: 0
  background-color: $bg-color

.main-container
  margin 0
  height 100vh

.container
  max-width: 1180px
  margin: 0 auto

.main-header
  background-color: $bg-color
  background-color: $nav-bg-color
  max-height: 50px
  padding: 20px

.main-nav
  background-color: $nav-bg-color 
  list-style-type: none
  padding: 20px
  max-height: 20px

.main-nav-item
  padding: 3px 8px
  // a
  //   color: $glt-70
  //   text-decoration: none
  // &.active
  //   a
  //     color: $gdk-40
  a
    color: $primary-color-1
    text-decoration: none
  &.active
    a
      color: $primary-color-0

.main-content
  background-color: $bg-color
  min-height: 500px

.main-footer
  background-color: $gray
  border-top: 10px solid $gdk-40
  color: $glt-50
  max-height: 200px

  .top-links
    padding: 10px
      
  .bottom-links
    padding: 10px
    border-top: 1px solid $glt-10
    color: $glt-20
    background-color: $gdk-40

.site-description
  p
    line-height: 1.5
    color: $glt-20

img.round
  // border-radius: 40px

.page-content
  background-color: #FFF
  padding: 20px

.d-paper-list
  list-style-type: none
  padding: 0 16px


.d-paper-list-item 
  cursor: pointer
  margin-bottom: 16px
  &:first-child
    padding-top: 8px

.photo
  padding-right: 16px

.d-paper-list-header

.d-paper-list-heading
  font-size: 16px
  line-height: 1.5
  color: #555
  font-weight: 400

.d-paper-list-subheading
  font-size: 14px
  // line-height: 0px
  color: #888
  font-weight: 400

.d-paper-list-secondary
  font-size: 14px
  fill: #999

.d-paper-list-timestamp
  font-size: 14px
  color: #999
  
.d-paper-list-content
  border-bottom: 1px solid #e9e9e9

.main
  background-color: #f9f9f9

.contact-button
  // background: #def
  background: #e15249
  float: right
  fill: #fff
  color: #fff

#main-logo
  width: 350px
  fill: #F1F1F2
  fill: #fff

#footer-logo
  width: 200px
  fill: $glt-70
